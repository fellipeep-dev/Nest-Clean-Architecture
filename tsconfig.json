{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "paths": {
      "@abstractions": [
        "src/common/abstractions"
      ],
      "@errors": [
        "src/common/errors"
      ],
      "@filters": [
        "src/common/filters"
      ],
      "@pipes": [
        "src/common/pipes"
      ],
      "@utils": [
        "src/common/utils"
      ],
      "@entities": [
        "src/domain/entities"
      ],
      "@dtos": [
        "src/domain/dtos"
      ]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}